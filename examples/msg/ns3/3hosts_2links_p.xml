<?xml version='1.0'?>
 <!DOCTYPE platform SYSTEM "http://simgrid.gforge.inria.fr/simgrid.dtd">
<platform version="3">

	<!-- a ______1______ b _____2_____ c -->

	<AS id="AS0" routing="Full">

		<host id="a" power="1gf" />
		<host id="b" power="1gf" />
		<host id="c" power="1gf" />

		<link id="1" bandwidth="1KBps" latency="10ms" />
		<link id="2" bandwidth="1KBps" latency="10ms" />

		<route src="a" dst="b">
			<link_ctn id="1" />
		</route>
		
		<route src="b" dst="c">
			<link_ctn id="2" />
		</route>
		
		<route src="a" dst="c">
			<link_ctn id="1" />
			<link_ctn id="2" />
		</route>

	</AS>
</platform>